# Event-Driven PoC Environment Configuration

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC=events.contact_form
KAFKA_NUM_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1
KAFKA_CONSUMER_GROUP=workflow-agent
KAFKA_CLUSTERS_0_NAME=local
KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS=kafka:29092
KAFKA_CLUSTERS_0_ZOOKEEPER=zookeeper:2181
# API Service Configuration
FLASK_ENV=production
CORS_ORIGINS=*
API_PORT=5000
# Mailer Service Configuration
MAILER_KAFKA_CONSUMER_GROUP=mailer-service
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USE_TLS=false
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@event-driven-poc.com
FROM_NAME=Event-Driven PoC Team

# Workflow Agent Configuration
WORKFLOW_KAFKA_CONSUMER_GROUP=workflow-agent
CRM_API_BASE=http://api:5000/api
CRM_API_TIMEOUT=30

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:5000/api

# Monitoring Configuration
KAFKA_UI_PORT=8080

# Security Configuration (for production)
# TLS_CERT_PATH=/certs/server.crt
# TLS_KEY_PATH=/certs/server.key
# JWT_SECRET_KEY=your-secret-key-here

# Database Configuration (if needed for future extensions)
# DATABASE_URL=postgresql://user:password@localhost:5432/eventpoc

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
KAFKA_CONSUMER_MAX_POLL_RECORDS=10
KAFKA_PRODUCER_BATCH_SIZE=16384
KAFKA_PRODUCER_LINGER_MS=10

# zookeeper
ZOOKEEPER_CLIENT_PORT=2180
ZOOKEEPER_TICK_TIME=2000


KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT='zookeeper:2181'
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0
KAFKA_AUTO_CREATE_TOPICS_ENABLE='true'
KAFKA_NUM_PARTITIONS=3
KAFKA_DEFAULT_REPLICATION_FACTOR=1
